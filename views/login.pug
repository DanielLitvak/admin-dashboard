extends layout

block content
  form.sign-up-form.mx-auto(action="/login", method="post")
    .form-group
      label(name='username') Username:
      input.form-control(type="text", name='username', id='username')
    .form-group
      label(name='password') Password:
      input.form-control(type="password", name='password', id='password')
    .text-center
      button.btn.btn-primary(type="submit") Log In