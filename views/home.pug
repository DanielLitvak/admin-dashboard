extends layout

block content
  #wrapper.d-flex
    // Sidebar
    #sidebar-wrapper.bg-light.border-right
      .sidebar-heading Admin dashboard 
      .list-group.list-group-flush
        a.list-group-item.list-group-item-action.bg-light(href='#') Dashboard
        a.list-group-item.list-group-item-action.bg-light(href='#users') Users
        a.list-group-item.list-group-item-action.bg-light(href='#other') Sessions
    // /#sidebar-wrapper
    // Page Content
    #page-content-wrapper
      nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
        button#menu-toggle.btn.btn-primary 
          i.icon-user.fa-bars
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.icon-user.fa-chevron-circle-down
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ml-auto.mt-2.mt-lg-0
            li.nav-item.active
              a.nav-link(href='#')
                | Home 
                span.sr-only (current)
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                | #{name}
              .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='#') Profile
                .dropdown-divider
                a.dropdown-item(href='/sign-out') Sign out
      .container-fluid
        h1#users.mt-4 Users
        p
          | This is the users section.
        br
        .table-responsive
          table.table#users-table(style={display: 'none'})
            thead.thead-dark
              tr
                th(scope='col') #
                th(scope='col') Username
                th(scope='col') Password hash
                th(scope='col') Name
                th(scope='col') Update
                th(scope='col') Delete
            tbody#users-body
            tfoot#table-footer
              td(colspan='6')
                button.btn#add-user-btn
                  i.fas.fa-plus.fa-2x.icon-user
            template#new-user-template
              tr#new-user-row
                td
                td
                  input.form-control#new-username(type="text", placeholder='Username')
                td
                  .password-wrapper
                    input.form-control#new-password(type="password", placeholder='Password')
                    input.form-control#new-password2(type='password', placeholder='Confirm password')
                td
                  input.form-control#new-name(type='text', placeholder='Name')
                td
                  button.btn#approve-new-user
                    i.fas.fa-check.fa-2x.icon-user
                td
                  button.btn#deny-new-user
                    i.fas.fa-times.fa-2x.icon-user
      .container-fluid
        h1#other.mt-4 Sessions
        p
          | This is the sessions section.
        br
        .table-responsive
          table.table#sessions-table(style={display: 'none'})
            thead.thead-dark
              tr
                th(scope='col') #
                th(scope='col') User
                th(scope='col') Expires
                th(scope='col') Destroy
            tbody#sessions-body

